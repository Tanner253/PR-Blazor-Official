@page "/Dino/Details/{CurrentID}"


@using PrehistoricRealism.Data.Services
@using PrehistoricRealism.Data
@inject DinoServices objDinoServices
@inject NavigationManager NavigationManager

@if (dino == null)
{
    <p><em>Loading...</em></p>

}
else
{
    <h3>Dino Details for (ID: @dino.ID)</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Dinosaur
        </dt>
        <dd class="col-sm-10">
            @dino.Name
        </dd>
        <dt class="col-sm-2">
            Diet
        </dt>
        <dd class="col-sm-10">
            @dino.Diet
        </dd>
        <dt class="col-sm-2">
            Need To Know
        </dt>
        <dd class="col-sm-10">
            @dino.NeedToKnow
        </dd>
        <dt class="col-sm-2">
            Behavior
        </dt>
        <dd class="col-sm-10">
            @dino.Behavior
        </dd>
        <dt class="col-sm-2">
            Social Interaction
        </dt>
        <dd class="col-sm-10">
            @dino.SocialInteraction
        </dd>
        <dt class="col-sm-2">
            PackLimits
        </dt>
        <dd class="col-sm-10">
            @dino.PackLimits
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-6">
            <img class="img-fluid" src="@dino.Image" alt="@dino.Name" />
        </dd>
        <dd class="col-sm-4"></dd>
        <dt class="col-sm-2">
            Additional Info
        </dt>
        <dd class="col-sm-10">
            @dino.Additionalinfo
        </dd>
    </dl>
    
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">

                    <input type="button" class="btn btn-primary" @onclick="Back" value="Cancel" />
                </div>
            </div>
        </div>

}

@code {
    [Parameter]
    public string CurrentId { get; set; }
    DinosaurInfo dino;

    protected override async Task OnInitializedAsync()
    {
        dino = await objDinoServices.GetDinosaur(Convert.ToInt32(CurrentId));
    }

    private void Back()
    {
        if(
            dino.Diet == DinosaurInfo.Food.Herbivore)
        {

            NavigationManager.NavigateTo("/herbivores");
        }else if(  dino.Diet == DinosaurInfo.Food.Carnivore)
        {
            NavigationManager.NavigateTo("/carnivores");
        }
    }
}
